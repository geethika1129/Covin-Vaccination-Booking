    /* style.css */
    
    body {
        font-family: Arial, sans-serif;
        background-color: #d7d4f0;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    
    h1 {
        font-size: 32px;
        margin-bottom: 20px;
        color: #007bff;
    }
    
    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }
    
    .button-container a {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 20px;
        text-decoration: none;
        color: #f5ebeb;
    }
    
    .button-container img {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        transition: transform 0.2s ease-in-out;
        color: aliceblue;
    }
    
    .button-container img:hover {
        transform: scale(1.1);
    }
    
    a p {
        margin-top: 10px;
        font-weight: bold;
    }
    /* Optional: Add background colors to the buttons */
    
    .button-container a:nth-child(1) img {
        background-color: #007bff;
    }
    
    .button-container a:nth-child(2) img {
        background-color: #28a745;
    }
</style>

